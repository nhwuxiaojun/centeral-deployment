  			<%if("2".equals(rs2.getString("valid"))){%>
				&nbsp;<input type="button" name="button2" value="新增" class="en" onClick="add()">&nbsp;<input type="button" name="button3" value="删除" class="en" onClick="del()">
			<%}else{%>

			<%}%>
		<%}%>
        </td>
	</tr>
</table>

<input type="hidden" name="flag" value="y">
